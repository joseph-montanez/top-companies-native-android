<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    >
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        android:background="@color/list_item_bg"
        android:rowOrderPreserved="true"
        android:columnCount="2"
        android:rowCount="6"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Agency.com LLC"
            android:id="@+id/listCompanyName"
            android:layout_row="1"
            android:layout_column="0"
            android:textColor="#ff0099cc"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/ic_action_next_item"
            android:layout_rowSpan="5"
            android:baselineAlignBottom="false"
            android:layout_gravity="center_vertical|right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="488 Madison Ave., 4th Fl."
            android:id="@+id/listCompanyAddress"
            android:layout_row="2"
            android:layout_column="0"
            android:textColor="#ff4C5356"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New York, NY 10022"
            android:id="@+id/listCompanyCityStateZip"
            android:layout_row="3"
            android:layout_column="0"
            android:textColor="#ff4C5356"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="http://www.angency.com"
            android:id="@+id/listCompanyWebsite"
            android:layout_row="4"
            android:layout_column="0"
            android:textColor="#ff4C5356"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(222) 358-2600"
            android:id="@+id/listCompanyPhone"
            android:layout_row="5"
            android:layout_column="0"
            android:textColor="#ff4C5356"
            android:textSize="16sp"/>
    </GridLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:id="@+id/separator2"
        android:visibility="visible"
        android:background="#ffd9d9d9"/>
</LinearLayout>