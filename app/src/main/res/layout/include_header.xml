<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:background="#ff333333">

        <ImageView
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/top_companies_horizonal"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false" />

        <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/listViewBackButton"-->
            <!--android:src="@drawable/ic_action_prev_item"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:tint="#ccffffff"-->
            <!--android:padding="16dp" />-->
        <Button
            android:drawableLeft="@drawable/ic_action_prev_item"
            android:background="@drawable/header_button"
            android:layout_width="48dp"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffffffff"
            android:paddingLeft="7dp"
            android:elevation="0dp"
            android:id="@+id/listViewBackButton"
            android:onClick="logInWithFacebook"
            android:singleLine="false" />

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:id="@+id/separator"
        android:visibility="visible"
        android:background="#ff808080"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Internet and Web"
        android:id="@+id/listHeading"
        android:textSize="20sp"
        android:textColor="#ffffffff"
        android:layout_gravity="center_horizontal"
        android:background="#ff0099cc"
        android:textAlignment="center"
        android:padding="10dp"
        android:gravity="center_horizontal" />
</LinearLayout>